@model baiTapTuan2.Models.Student

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="text-Star">
            <h2>Enter data for the student object in the program</h2>
            <p>You can add or edit the information of the Student</p>
            <hr />
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.StudentName, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.StudentGender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Nam
                @Html.RadioButtonFor(x => x.StudentGender, " ")
                Nữ
                @Html.RadioButtonFor(x => x.StudentGender, " ")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Age, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Age, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Address, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="newstd">
            <button type="button" class="btn btn-success">New Student</button>
        </div>


    </div>
}